<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_385505"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Christites!!"

        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="40sp"
        app:fontFamily="@font/aladin" />

    <TextView
        android:id="@+id/heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excellence and Service"

        android:textColor="#090707"
        android:textSize="30sp"
        app:fontFamily="cursive" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </Space>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="#FDFDFD"
        android:textColorHighlight="#702C2C"
        android:textColorLink="#0E2151"
        app:backgroundTint="#242C63" />
</LinearLayout>
